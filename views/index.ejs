  <%- include('partials/header'); -%>

  <!-- The mid part is discussed here -->
  <div class="mid">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-9">
          <h2><%= type %></h2>
          <div class="container-fluid">
            <div class="row">
              <% for (var i = (posts.length)-1; i>=0; i--){ %>
                  <div class="col-md-4 entry">
                    <a href="/category/<%=  posts[i].category  %>/posts/<%=  posts[i]._id  %>/" class="blogPost">
                      <div class="card myTitleImage">
                        <img src="data:image/jpg;base64,<%= posts[i].frontImage %>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%=  posts[i].name  %></h5>
                            <% const txt = posts[i].content.substring(0,100); %>
                          <p class="card-text"> <%=  txt  %></p>
                        </div>
                      </div>
                    </a>
                  </div>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="reqd">
            <div class="sides">
              <h4>DISCOVER MORE OF WHAT MATTERS TO YOU</h4>
              <form action="/category" method="post">
                <button type="submit" class="btn btn-outline-dark" name="field" value="Self">Self</button>
                <button type="submit" class="btn btn-outline-dark" name="field" value="Photography">Photography</button>
                <button type="submit" class="btn btn-outline-dark" name="field" value="Travel">Travel</button>
                <br>
                <button type="submit" class="btn btn-outline-dark" name="field" value="Work">Work</button>
                <button type="submit" class="btn btn-outline-dark" name="field" value="Foods & Drinks">Foods & Drinks</button>
                <button type="submit" class="btn btn-outline-dark" name="field" value="Lifestyle">Lifestyle</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer'); -%>
