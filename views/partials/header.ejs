<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">

  <!-- icon declaration for title bar -->
  <link rel="apple-touch-icon" sizes="180x180" href="/images/icon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/icon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/icon/favicon-16x16.png">
  <link rel="manifest" href="/images/icon/site.webmanifest">
  <!-- bootstrap declaration -->
  <div class="stylesheets">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">
  </div>

  <title>Omni</title>
</head>

<body>

  <!-- the top section contains all {here both of top} navbars -->
  <div class="top sticky-lg-top">
    <hr>
    <!-- this navigate class is the second navigation bar which gives all that is in the second nav bar -->
    <div class="navigate">
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><img src="/images/icon/solar-system.png" alt="logo"></a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse " id="navbarNav">

            <!-- navbar 2 items links -->

            <ul class="navbar-nav me-auto mb-2 mb-lg-0 central">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <div class="dropdown">
                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  Topics
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <form action="/category" method="post">
                      <button type="submit" class="btn btn-outline-dark topicsMenu" name="field" value="Self">Self</button>
                      <button type="submit" class="btn btn-outline-dark topicsMenu" name="field" value="Foods & Drinks">Foods & Drinks</button>
                      <button type="submit" class="btn btn-outline-dark topicsMenu" name="field" value="Work">Work</button>
                      <br>
                      <button type="submit" class="btn btn-outline-dark topicsMenu" name="field" value="Photography">Photography</button>
                      <button type="submit" class="btn btn-outline-dark topicsMenu" name="field" value="Travel">Travel</button>
                      <button type="submit" class="btn btn-outline-dark topicsMenu" name="field" value="Lifestyle">Lifestyle</button>
                  </form>
                </ul>
              </div>



              <!-- <li class="nav-item">
                <a class="link-primary nav-link active" href="#">Topics</a>
              </li> -->
              <li class="nav-item">
                <a class="link-primary nav-link active" href="/User/Highlight">Highlights</a>
              </li>
              <li class="nav-item">
                <form action="/logout" method="post">

                  <button type="submit" name="button" class="btn btn-outline-dark topicsMenu"><i class="bi bi-power"> </i><%= Authentic %></button>
                </form>
              </li>
            </ul>
            <!-- Subscribe button -->

            <div class="d-grid gap-2 d-lg-flex justify-content-lg-end ">
              <a href="/editor"><button type="button" class="btn btn-outline-dark">Start Writing</button></a>
            </div>
          </div>
        </div>
      </nav>
    </div>

    <!-- searching button -->
    <div class="searcher">
      <div class="nav-item nav-link dropdown justify-content-lg-end central">
        <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-search"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-lg-start dropdown-menu-sm-end" aria-labelledby="navbarDropdown">
          <li><a class="dropdown-item" href="#">
              <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success search_box" type="submit">Search</button>
              </form>
            </a></li>
        </ul>
      </div>
    </div>
  </div>
