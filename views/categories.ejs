<%- include('partials/header'); -%>

<!-- The mid part is discussed here -->



<div class="mid">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-9">
        <p><b <%= checker %>><%= nam %></b><br><em><%= abt %></em></p>
        <h2><%= type %></h2>
        <div class="container-fluid">
          <div class="row">
            <% for (var i = (posts.length)-1; i>=0; i--){ %>
            <div class="card mb-3">
              <a href="/category/<%=  posts[i].category  %>/posts/<%=  posts[i]._id  %>/" class="blogPost">
                <div class="row g-0">
                  <div class="col-md-2">
                    <img src="data:image/jpg;base64,<%= posts[i].frontImage %>" class="card-img-top" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%=  posts[i].name  %></h5>
                      <% const txt = posts[i].content.substring(0,100); %>
                      <p class="card-text"> <%=  txt  %></p>
                    </div>
                  </div>
                </div>
              </a>
              <div class="col-md-2 deleteButton bt">
                <form class="bt" action="/del" method="post">
                  <button type="submit" class="btn btn-outline-dark" name="deleteDoc" value="<%=  posts[i]._id  %>" <%= checker %>><i class="bi bi-trash"></i></button>
                </form>
              </div>
            </div>
            <% } %>

            <h5 <%= checker %>>Here are your comments user.</h5>

            <% for (var i = (cmts.length)-1; i>=0; i--){ %>
            <div class="card mb-3">

                <div class="row g-0">
                  <div class="col-md-2">

                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%=  cmts[i].posterName  %></h5>
                      <% const txt = cmts[i].text.substring(0,100); %>
                      <p class="card-text"> <%=  txt  %></p>
                    </div>
                  </div>
                </div>

              <div class="col-md-2 deleteButton bt">
                <form class="bt" action="/delCmt" method="post">
                  <button type="submit" class="btn btn-outline-dark" name="deleteCmt" value="<%=  cmts[i]._id  %>" <%= checker %>><i class="bi bi-trash"></i></button>
                </form>

              </div>
            </div>
            <% } %>

          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="reqd">
          <div class="sides">
            <h4>DISCOVER MORE OF WHAT MATTERS TO YOU</h4>
            <form action="/category" method="post">
              <button type="submit" class="btn btn-outline-dark" name="field" value="Self">Self</button>
              <button type="submit" class="btn btn-outline-dark" name="field" value="Photography">Photography</button>
              <button type="submit" class="btn btn-outline-dark" name="field" value="Travel">Travel</button>
              <br>
              <button type="submit" class="btn btn-outline-dark" name="field" value="Work">Work</button>
              <button type="submit" class="btn btn-outline-dark" name="field" value="Foods & Drinks">Foods & Drinks</button>
              <button type="submit" class="btn btn-outline-dark" name="field" value="Lifestyle">Lifestyle</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- The bottom part of the website -->
<%- include('partials/footer'); -%>
